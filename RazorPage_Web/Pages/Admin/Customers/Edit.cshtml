@page
@model RazorPage_Web.Pages.Admin.Customers.EditModel
@{
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Customer</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ID</label>
				<div class="col-sm-8">
					<input readonly class="form-control-plaintext" value="@Model.Customer.Id">

				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Full Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="customerDTO.FullName">
					<span asp-validation-for="customerDTO.FullName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Email</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="customerDTO.Email">
					<span asp-validation-for="customerDTO.Email" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Phone Number</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="customerDTO.PhoneNumber">
					<span asp-validation-for="customerDTO.PhoneNumber" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Address</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="customerDTO.Address">
					<span asp-validation-for="customerDTO.Address" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Accumulated Point</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="customerDTO.accumulated_point">
					<span asp-validation-for="customerDTO.accumulated_point" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-page="/Admin/Customers/Index" role="button">Cancel</a>
				</div>

			</div>

		</form>
	</div>
</div>
@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
	<script src="~/js/site.js"></script>
}