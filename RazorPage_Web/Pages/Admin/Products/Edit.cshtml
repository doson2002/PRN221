@page
@model RazorPage_Web.Pages.Admin.Products.EditModel
@{
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Product</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">ID</label>
				<div class="col-sm-8">
					<input readonly class="form-control-plaintext" value="@Model.Product.Id">
			
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Name</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.ProductName">
					<span asp-validation-for="ProductDTO.ProductName" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Barcode</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.Barcode">
					<span asp-validation-for="ProductDTO.Barcode" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Quantity</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.Quantity">
					<span asp-validation-for="ProductDTO.Quantity" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Weight</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.Weight">
					<span asp-validation-for="ProductDTO.Weight" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.Description">
					<span asp-validation-for="ProductDTO.Description" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label"></label>
				<div class="col-sm-8">
					<img src="/products/@Model.Product.ImageFileName" width="150"/>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductDTO.ImageFile">
					<span asp-validation-for="ProductDTO.ImageFile" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-page="/Admin/Products/Index" role="button">Cancel</a>
				</div>

			</div>

		</form>
	</div>
</div>